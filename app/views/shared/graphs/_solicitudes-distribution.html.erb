<h5 class="sub-title text-center">Distribuci√≥n de solicitudes</h5>
<canvas id="distribution" width="960" height="500"></canvas>
<% labels = secretarias_hash.keys %>
<% values = secretarias_hash.values %>
<script>
  const ctx = document.getElementById('distribution');
  const myChart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels: <%= labels.to_json.html_safe %>,
      datasets: [{
        data: <%= values.to_json.html_safe %>,
        backgroundColor: ['rgba(255, 99, 132, 0.2)', 'rgba(54, 162, 235, 0.2)', 'rgba(255, 206, 86, 0.2)', 'rgba(75, 192, 192, 0.2)', 'rgba(153, 102, 255, 0.2)', 'rgba(255, 159, 64, 0.2)'],
        borderColor: ['rgba(255, 99, 132, 1)', 'rgba(54, 162, 235, 1)', 'rgba(255, 206, 86, 1)', 'rgba(75, 192, 192, 1)', 'rgba(153, 102, 255, 1)', 'rgba(255, 159, 64, 1)'],
        borderWidth: 1
      }]
    },
    options: {
      legend: {
          display: false
      },
      scales: {
        yAxes: [{
          ticks: {
            beginAtZero: true,
            stepSize: 1,
            max: <%= values.max + 1 %>
          }
        }]
      }
    }
  });
</script>

